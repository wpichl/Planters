{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "es"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"],
  "compileOnSave": false
}
